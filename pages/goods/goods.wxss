/* pages/goods/goods.wxss */
body html{
  width: 100%;
}

.box{
  background: #EAEAEA;
}

/* 顶部 */
.top-all{
  background: #ffffff;
  padding: 1rpx;
  width: 100%;
  height: 85rpx;
}

.top-all .search{
  display: inline-block;
  border-radius: 5px;
  width: 80%;
  height: 65rpx;
  line-height: 65rpx;
  background: #EAEAEA;
  margin: 10rpx 20rpx;
  font-size: 30rpx;
  color: #B4B2B2;
}
.top-all .search text{
  margin-left: 30rpx;
}
.top-all .search icon{
  position: relative;
  top: 10rpx;
  left: 10rpx;
}
.top-all .message{
  position: relative;
  top: 7rpx;
  margin-left: 10rpx;
  display: inline-block;
  font-size: 50rpx;
}
.top-all .message .dian{
  position: absolute;
  top: 5rpx;
  left: 38rpx;
  height: 15rpx;
  width: 15rpx;
  border-radius: 100%;
  z-index: 1;
  background: red;
}

/* banenr部分 */
.banner{
  width: 100%;
}

.banner swiper{
  width: 100%;
}

.banner swiper-item{
  width: 100%;
}

.banner image{
  width: 100%;
  height: 100%;
}

/* 互动区 */
.action{
  width: 100%;
  height: 180rpx;
  background: #ffffff;
}

.action .action-item{
  margin-top: 30rpx;
  margin-left: 30rpx;
  text-align: center;
  width: 20%;
  float: left;
}

.action span{
  font-size: 60rpx;
  display: block
}

.action .action-item-text{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
}
/* 互动区结束 */


/* 商品 */
.content{
  width: 100%;
  margin-top: 20rpx;
  height: 500rpx;
}
.content .content-left{
  float: left;
  /* display: inline-block; */
  padding: 0.1rpx;
  height: 100%;
  width: 50%;
  background: #ffffff;
}
.content .content-left .title{
  color: #CE8D76;
  margin-top: 20rpx;
  margin-left: 15rpx;
}
.content .content-left .x-title{
  margin-top: 15rpx;
  margin-left: 15rpx;
  font-size: 25rpx;
  color: #C0C0C0;
}
.content .content-left .time{
  margin-top: 15rpx;
  margin-left: 15rpx;
}
.content .content-left .time span{
  font-size: 35rpx;
  border-radius: 5px;
  background: #737373;
  color: #ffffff;
  padding: 5rpx 5rpx;
}
.content .content-left .time text{
  margin: 0 7rpx;
}

.content .content-right{
  float: left;
  margin-left: 2rpx;
  /* display: inline-block; */
  padding: 0.1rpx;
  height: 100%;
  width: 48%;
}
.content .content-right .right-top{
  background: #ffffff;
  height: 50%;
  width: 100%;
}
.content .content-right .right-top .left{
  float: left;
  width: 50%;
  height: 100%;
}
.content .content-right .right-top .left .title{
  color: #BA9C4A;
  margin-top: 20rpx;
  margin-left: 15rpx;
}
.content .content-right .right-top .left .x-title{
  margin-top: 15rpx;
  margin-left: 15rpx;
  font-size: 25rpx;
  color: #C0C0C0;
}

.content .content-right .right-top .right{
  margin-top: 20rpx;
  float: left;
  width: 50%;
  height: 100%;
}

.content .content-right .right-buttom{
  background: #ffffff;
  margin-top: 2rpx;
  height: 50%;
  width: 100%;
}
.content .content-right .right-buttom .left{
  float: left;
  width: 50%;
  height: 100%;
}
.content .content-right .right-buttom .left .title{
  color: #A393B8;
  margin-top: 20rpx;
  margin-left: 15rpx;
}
.content .content-right .right-buttom .left .x-title{
  margin-top: 15rpx;
  margin-left: 15rpx;
  font-size: 25rpx;
  color: #C0C0C0;
}

.content .content-right .right-buttom .right{
  float: left;
  width: 50%;
  height: 100%;
}