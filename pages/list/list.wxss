/* pages/list/list.wxss */
html body{
  height: 100%;
  width: 100%;
}


/* banenr部分 */
.banner{
  width: 100%;
}

.banner swiper{
  width: 100%;
}

.banner swiper-item{
  width: 100%;
}

.banner image{
  width: 100%;
  height: 100%;
}

/* banner部分结束 */

/* 互动区 */
.action{
  width: 100%;
  height: 180rpx;
  background: #ffffff;
}

.action .action-item{
  margin-top: 30rpx;
  margin-left: 30rpx;
  text-align: center;
  width: 20%;
  float: left;
}

.action span{
  font-size: 60rpx;
  display: block
}

.action .action-item-text{
  width: 100%;
  text-align: center;
  font-size: 30rpx;
}
/* 互动区结束 */

/* 公告区 */
.notice{
  width: 100%;
  height: 80rpx;
  background: #F7F7F7;
}
.notice text{
  color: #F9AB53;
}
.notice swiper{
  height: 80rpx;
  width: 100%;
}
.notice-icon{
  margin-left: 10rpx;
  line-height: 80rpx;
  color: #F9AB53;
  font-size: 50rpx;
}

.notice .notice-text{
  display: inline-block;
  position: relative;
  top: -6rpx;
  margin-left: 10rpx;
  color: #A3A3A3;
  font-size: 30rpx;
}
.notice .notice-goods{
  color: #F9AB53;
}
.notice .jiantou{
  display: inline-block;
  line-height: 80rpx;
  float: right;
  margin-right: 20rpx;
}
/* 公告结束 */

/* 内容部分 */
.content{
  background: #A3A3A3;
  height: 100%;
  width: 100%;
}
.content-title{
  background: #ffffff;
  height: 120rpx;
  border-bottom: solid 1rpx #F5F5F5;
}
.content-title span{
  font-size: 35rpx;
  text-align: center;
  margin-left: 11%;
  display: inline-block;
  line-height: 120rpx;
  height: 120rpx;
}

.content-goods{
  margin-left: 10rpx;
  height: 100%;
  width: 100%;
}
.content-goods .goods-item{
  float: left;
  height: 480rpx;
  width: 48%;
}
.content-goods .goods-img {
  height: 320rpx;
  width: 100%;
}
.content-goods .goods-img image{
  height: 320rpx;
  width: 100%;
}
.content-goods .goods-title{
  margin-top: 10rpx;
  text-align: center;
  font-size: 30rpx;
  color: #777777;
}
.content-goods .speed{
  border-radius: 5px;
  margin-top: 20rpx;
  height: 15rpx;
  width: 90%;
  margin-left: 10rpx;
  background: #EAEAEA;
}
.content-goods .speed-item{
  border-radius: 5px;
  height: 15rpx;
  background: #FE5E42;
}
.content-goods .add{
  margin-left: 10rpx;
}
.content-goods .add .item-text{
  font-size: 20rpx;
}
.content-goods .add text{
  color: #F7B3B3;
  font-size: 20rpx;
}
.content-goods .add .addlink{
  border-radius: 5px;
  padding: 10rpx 15rpx;
  border: solid 1rpx #F7B3B3;
  height: 100%;
  margin-left: 100rpx;
  color: #F7B3B3;
  font-size: 20rpx;
}