/* pages/cart/cart.wxss */
body html{
  width: 100%;
  height: 100%;
}

.container{
  padding: 0.1rpx;
  height: 100%;
  margin-bottom: 80rpx;
  background: #EAEAEA;
}

.cart-item{
  border-radius: 5px;
  width: 95%;
  margin-top: 20rpx;
  background: #ffffff;
}

.cart-item .bus-title{
  width: 100%;
  color: #7E7E7E;
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: solid 1rpx #EAEAEA;
}
.cart-item .goods-item icon{
  display: block;
  float: left;
  margin-top: 20rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  line-height: 200rpx;
}
.cart-item icon{
  display: block;
  float: left;
  margin-top: 20rpx;
  height: 50rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.cart-item .bus-title .tb{
  font-size: 35rpx;
}
.cart-item .bus-title .jiantou{
  margin-left: 40%;
}
.cart-item .goods-item{
  /* line-height: 200rpx; */
  width: 100%;
  height: 200rpx;
  /* background: red; */
}

.cart-item .goods-item .goods-item-left{
  float: left;
  width: 30%;
  height: 100%;
}
.cart-item .goods-item .goods-item-right{
  margin-top: 10rpx;
  display: inline-block;
  width: 58%;
  height: 100%;
}
.cart-item .goods-item .goods-item-right span{
  font-size: 30rpx;
  color: #5D5D5D;
}
.cart-item .goods-item .goods-item-right .price{
  font-size: 20rpx;
  color: #F8828F;
  float: right;
  margin: 20rpx;
}
.cart-item .goods-item .goods-item-right .size{
  margin-top: 20rpx;
  color: #A3A3A3;
  font-size: 20rpx;
}
.cart-item .goods-item .goods-item-right .number{
  border-radius: 5px;
  height: 50rpx;
  width: 150rpx;
  margin-top: 30rpx;
  border: solid 1rpx #EAEAEA;
  display: inline-block;
}
.cart-item .goods-item .goods-item-right .number span{
  text-align: center;
  display: inline-block;
  height: 50rpx;
  width: 50rpx;
  line-height: 50rpx;
  position: relative;
  bottom: 10rpx;
}
.cart-item .goods-item .goods-item-right .number button{
  color: #F2768F;
  border: none;
  text-align: center;
  display: inline-block;
  height: 50rpx;
  line-height: 50rpx;
  width: 50rpx;
  padding: 0;
  background: #ffffff;
}
.cart-item .goods-item .goods-item-right .del{
  display: inline-block;
  margin-right: 20rpx;
  margin-top: 40rpx;
  float: right;
}

/* 去结算 */
.all-price{
  position: fixed;
  bottom: 0;
  margin-top: 100rpx;
  width: 95%;
  height: 80rpx;
  line-height: 80rpx;
  background: #ffffff;
}
.all-price icon{
  display: block;
  height: 80rpx;
  float: left;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.all-price span{
  font-size: 30rpx;
}
.all-price view{
  font-size: 28rpx;
  color: #ffffff;
  text-align: center;
  height: 80rpx;
  width: 200rpx;
  background: #FF5757;
  float: right;
}
.all-price .and{
  float: right;
  margin-right: 20rpx;
}
